{
  "name": "Gitviewer",
  "description": "A lightweight chrome extension that notifies you when your Github profile is viewed.",
  "version": "0.1",
  "manifest_version": 2,
  "author": "Medi W. Assumani",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Monitoring Github.com"
  },

  "permissions": [
      "webRequest",
      "webNavigation",
      "https://*.github.com/*",
      "tabs",
      "http://*/*",
      "https://*/*"
  ],

  "web_accessible_resources": [
  "mydummy.js"
],

  "content_security_policy": "script-src 'self' https://cdn.socket.io; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["https://*.github.com/*", "http://localhost:3000/"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "background_page": ["background.html"],
    "matches": ["https://*.github.com/*", "http://localhost:3000/"],
    "persistent": true
  }
}
