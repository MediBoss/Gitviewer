{
  "name": "Gitviewer",
  "description": "A lightweight chrome extension that notifies you when your Github profile is viewed.",
  "version": "0.1",
  "manifest_version": 2,
  "author": "Medi W. Assumani",

  "permissions": [
      "webRequest",
      "webNavigation",
      "https://*.github.com/*",
      "tabs",
      "http://*/",
      "https://*/*"
  ],

  "content_security_policy": "script-src 'self' https://cdn.socket.io; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "background_page": ["background.html"],
    "matches": ["https://*.github.com/*"],
    "persistent": true
  }
}
